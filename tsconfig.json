{
   "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": [
         "ES2015",
         "DOM"
      ],
      "moduleResolution": "Node",
      "strict": true,
      "noImplicitAny": false,
      "removeComments": true,
      "skipLibCheck": true,
      "inlineSourceMap": true,
      "baseUrl": "src/Mudde",
      "outDir": "dist/",
      "paths": {
         "Mudde/*": [
            "./*"
         ]
      },
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "dist",
      "node_modules"
   ]
}